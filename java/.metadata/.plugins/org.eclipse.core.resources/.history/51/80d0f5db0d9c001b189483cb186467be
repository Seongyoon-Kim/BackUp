package com.test.question.q14;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Q004 {
	
	public static void main(String[] args) throws IOException {
		
		BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
		
		for (int i=0; i<=10; i++) {
			
			System.out.print("파일명: ");
			String fileName = reader.readLine();
			
			int index = fileName.indexOf(".");
			
			if (fileName.indexOf("png") > -1 || fileName.indexOf("png") > -1 || fileName.indexOf("png") > -1 || fileName.indexOf("png") > -1 || fileName.indexOf("png") > -1) {
				
				System.out.printf("gif: %d개", fileName.indexOf("gif"));
				System.out.printf("jpg: %d개", fileName.indexOf("jpg"));
				System.out.printf("png: %d개", fileName.indexOf("png"));
				System.out.printf("hwp: %d개", fileName.indexOf("hwp"));
				System.out.printf("doc: %d개", fileName.indexOf("doc"));
				
			} else {
				
				break;
				
			}
			
		}//for
		
	}//main

}
