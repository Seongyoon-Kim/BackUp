package com.test.question.q14;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Q004 {
	
	public static void main(String[] args) throws IOException {
		
		BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
		
		for (int i=0; i<=10; i++) {
			
			System.out.print("파일명: ");
			String fileName = reader.readLine();
			
			if (fileName.indexOf(".gif") > -1 || fileName.indexOf(".jpg") > -1 || fileName.indexOf(".png") > -1 || fileName.indexOf(".hwp") > -1 || fileName.indexOf(".doc") > -1) {
				
			} else {
				
				break;
				
			}
			
		}//for
		
		System.out.printf("gif: %d개\n", fileName.indexOf(".gif"));
		System.out.printf("jpg: %d개\n", fileName.indexOf(".jpg"));
		System.out.printf("png: %d개\n", fileName.indexOf(".png"));
		System.out.printf("hwp: %d개\n", fileName.indexOf(".hwp"));
		System.out.printf("doc: %d개\n", fileName.indexOf(".doc"));
		
	}//main

}
